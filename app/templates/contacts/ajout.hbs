{{page-title "Ajout"}}
<form class="row g-3">
  <div class="col-auto">
    <Input class="form-control" @value={{@model.nom}} placeholder="Entrez le nom"/>
  </div>
  <div class="col-auto">
    <Input class="form-control" @value={{@model.prenom}} placeholder="Entrez le prenom"/>
  </div>
  <div class="col-auto">
    <Input class="form-control" @value={{@model.email}} placeholder="Entrez l'email"/>
  </div>
  <div class="col-auto">
    <button class="btn btn-primary" {{action "save" @model}}>Enregistrer</button>
  </div>
</form>
{{outlet}}
