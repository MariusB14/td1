{{page-title "Index"}}

<body>
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Connexion</h5>
            <form class="form-signin">
              <div class="form-label-group">
                <Input @value={{this.user.email}} type="email" id="inputEmail" class="form-control" placeholder="Adresse email" required autofocus/>
                <br/>
              </div>
              <div class="form-label-group">
                <Input @value={{this.user.password}} type="password" id="inputPassword" class="form-control" placeholder="Mot de passe" required/>
                <br/>
              </div>
              <button class="btn btn-lg btn-primary btn-block" {{action "login" this.user}} type="submit">Se connecter</button>
              <hr class="my-4">
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>

{{outlet}}
